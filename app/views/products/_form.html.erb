<%= form_with(model: @product, local: true) do |f| %>
<% if @product.errors.present? %>
    <p class="form-errors">
        <%= @product.errors.full_messages.join(", ") %>
    </p>
<% end %>
<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>
<div>
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>
<div>
    <%= f.label :price %>
    <%= f.number_field :price %>
</div>

<%= f.submit %>
<% end %>